    End Function

    <Web.Services.WebMethod()>
    Public Shared Function ejecuta(ByVal empleado As Integer, ByVal anterior As Integer) As String

        Dim sql As String = "update tb_cliente_ejecutivocgo set id_ejecutivo = " & empleado & " where id_ejecutivo = " & anterior & ""
